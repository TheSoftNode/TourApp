                    "200": {
                        "description": "A list of all tours",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string",
                                                "example": "5c88fa8cf4afda39709c2951"
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "The Sea Explorer"
                                            },
                                            "duration": {
                                                "type": "number",
                                                "example": 7
                                            },
                                            "maxGroupSize": {
                                                "type": "number",
                                                "example": 15
                                            },
                                            "difficulty": {
                                                "type": "string",
                                                "example": "medium"
                                            },
                                            "ratingsAverage": {
                                                "type": "number",
                                                "example": 4.8
                                            },
                                            "price": {
                                                "type": "number",
                                                "example": 497
                                            },
                                            "imageCover": {
                                                "type": "string",
                                                "example": "tour-1-cover.jpg"
                                            },
                                            "startLocation": {
                                                "type": "object",
                                                "properties": {
                                                    "type": {
                                                        "type": "string",
                                                        "example": "Point"
                                                    },
                                                    "coordinates": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "number"
                                                        },
                                                        "example": [
                                                            -118.113491,
                                                            34.111745
                                                        ]
                                                    },
                                                    "address": {
                                                        "type": "string",
                                                        "example": "2555 Brighton Ave, Los Angeles, CA"
                                                    },
                                                    "description": {
                                                        "type": "string",
                                                        "example": "Starting point for the tour."
